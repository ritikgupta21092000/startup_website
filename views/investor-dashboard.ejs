<!DOCTYPE html>

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta http-equiv="x-ua-compatible" content="ie=edge">

  <title>Startup India</title>
  <%- include ("partials/link.ejs"); -%>
  <link rel="stylesheet" href="css/investor-dashboard.css">
</head>

<body>

  <%- include ("partials/navbar.ejs"); -%>

  <div class="row" style="margin-top: 100px;">
    <!-- Sidebar -->
    <div class="col-12 col-md-3">
      <div class="sidebar">
        <div class="sidebar-header pl-5 pb-2 pt-2 mb-5">
          <p><i class="fas fa-tachometer-alt fa-lg"></i> Dashboard</p>

        </div>
        <div class="sidebar-item offset-3">
          <div class="sidebar-item-link mb-4">
            <a href="/"><i class="fas fa-home fa-lg"></i> Home</a><br>
          </div>
          <div class="sidebar-item-link mb-4">
            <a href="/investorAppliedProject"><i class="fas fa-business-time fa-lg"></i> Applied</a><br>
          </div>
          <div class="sidebar-item-link mb-4">
            <a href="/investorApprovedProject"><i class="fas fa-briefcase fa-lg"></i> Offered</a><br>
          </div>
          <div class="sidebar-item-link mb-4">
            <a href="#"><i class="fas fa-times fa-lg"></i> Not Offered</a><br>
          </div>
          <div class="sidebar-item-link">
            <a href="#"><i class="fas fa-envelope fa-lg"></i> Messages</a><br>
          </div>
        </div>


      </div>
    </div>
    <!-- Sidebar Ends -->
    <!-- Content on right side -->
    <div class="col-md">
      <div class="container">
        <div class="card  mt-5 bg-light">
          <div class="row mt-2">
            <div class="col-12 col-md-2 pl-5">
              <h3 class="mb-2" id="rightheader">Invest</h3>
              <p id="below-header-text">Invest in India's Best StartUps by bidding at our website.</p>
            </div>
            <div class="col-12 col-md-2 pl-5 offset-sm-2">
              <h3 class="mb-2" id="rightheader">Wait</h3>
              <p id="below-header-text">Apply and wait for the person to choose you.</p>
            </div>
            <div class="col-12 col-md-3 pl-5 offset-sm-2">
              <h3 class="mb-2" id="rightheader">Get Approved</h3>
              <p id="below-header-text">Write an award winning bid and get a chance to invest in the StartUps.</p>
            </div>
          </div>
        </div>
        <!-- 2ndrow -->
        <div class="row mt-5 mb-3">
          <h3>Statistics</h3>
        </div>
        <!-- Ends -->
        <!-- 3rd Row -->
        <div class="row">
          <!--  First Card -->
          <div class="card offset-sm-1 mb-1 pl-2 ml-1">
            <div class="card-body">
              <div class="card-header">Total Projects Applied</div>
              <p class="card-text mt-3">No of projects applied here</p>
              <a href="#" class="float-right">View All</a>
            </div>
          </div>
          <!-- Second Card -->
          <div class="card offset-sm-1 mb-1">
            <div class="card-body">
              <div class="card-header">Total Projects Approved</div>
              <p class="card-text mt-3">No of projects approved here</p>
              <a href="#" class="float-right">View All</a>
            </div>
          </div>
          <!--  Third Card -->
          <div class="card offset-sm-1 mb-1 pl-2">
            <div class="card-body">
              <div class="card-header">Total Projects Rejected</div>
              <p class="card-text mt-3">No of projects rejected here</p>
              <a href="#" class="float-right">View All</a>
            </div>
          </div>
        </div>
        <!-- End -->
      </div>
    </div>
  </div>
</body>

<!-- jquery,popper,bootstrap -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
